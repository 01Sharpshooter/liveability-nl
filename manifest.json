{
  "manifest_version": 2,
  "name": "Liveability NL",
  "version": "0.1.0",
  "description": "Liveability Scores for renting sites like Funda/Pararius.",
  "browser_action": {
    "default_title": "Liveability NL",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "util/constants.js",
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": [
        "settings/funda.js"
      ],
      "matches": [
        "https://www.funda.nl/*"
      ]
    },
    {
      "js": [
        "settings/pararius.js"
      ],
      "matches": [
        "https://www.pararius.com/*",
        "https://www.pararius.nl/*"
      ]
    },
    {
      "css": [
        "styles/styles.css",
        "styles/spinner.css",
        "styles/dialog.css",
        "styles/pagination.css"
      ],
      "js": [
        "resources/chartScripts.js",
        "util/constants.js",
        "util/helpers.js",
        "util/extension.js",
        "util/effects.js",
        "handlers/data-handler.js",
        "handlers/page-handler.js",
        "handlers/settings-handler.js",
        "components/spinner.js",
        "components/liveabilityChart.js",
        "components/helpModal.js",
        "components/liveabilityRegion.js",
        "components/pagination.js",
        "content.js"
      ],
      "matches": [
        "https://www.pararius.com/*",
        "https://www.pararius.nl/*",
        "https://www.funda.nl/*"
      ]
    }
  ],
  "web_accessible_resources": [
    "resources/PC4LBR.csv",
    "resources/PC4DIMENSIE.csv",
    "resources/chart-picture.png",
    "resources/help.html",
    "resources/chartScripts.js"
  ]
}